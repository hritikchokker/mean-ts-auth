    "@types/express-session": "^1.15.8",
    "@types/mongoose": "^4.7.23",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "chai": "^4.1.2",
