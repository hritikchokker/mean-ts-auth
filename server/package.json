{
  "name": "mean-boilerplate-server",
  "version": "1.0.0",
  "description": "Minimal boilerplate for mean architecture using ts",
  "main": "index.js",
  "scripts": {
    "start": "tsc && set DEBUG=express:* && node src/server.js",
    "cloudstart": "tsc && NODE_ENV=production node src/server.js",
    "herokustart": "npm run cloudstart",
    "dev": "nodemon --exec npm start",
